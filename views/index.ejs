            <input name="carModel" placeholder="Enter car model">
            <br>
            <label for="carMake">Car Make: </label>
            <br>
            <input name="carMake" placeholder="Enter the car's manufacturer">
            <br>
            <label for="year">Car Year: </label>
            <br>
            <input name="year" placeholder="Enter its year"
            <br>
            <button class="btn btn-primary" type="submit">Add Your Vehicle</button>
        </form>
    </div>
</div>





<% for (var i=0; i< carData.length; i++ ) { %>
    <hr>
    
    <div class="row justify-content-center">
        <div class="card col-md-4 ml-auto ">
            <h3>Thanks for the input!</h3>
            <p>Who's car: <%= bookData[i].name %></p>

            <p>Car Model: <%= carData[i].carModel %></p>

            <p>Car Make: <%= carData[i].carManufacturer %></p>

            <p>Car year: <%= carData[i].year %></p>

        </div>

    <br>
    
        <div class="card col-md-4">
            <h3>Update your Vehicle</h3>

                <%= console.log(carData) %>

                    <form method="POST">
                        <input type="hidden" id="id" name="id" value="<%= carData[i]._id %>"></input>
                        <label for="name"> Car List:</label>
                        <input type="text" id="name" name="name" value="<%= carData[i].name %>"></input>
                        <br><br>
                        <label for="bookTitle">Book Title: </label>
                        <input type="text" id="carMake" name="carMake"value="<%= carData[i].carModel %>">
                        <br><br>
                        <label for="year">Year Made: </label>
                        <br><br>
                        <input type="text" id="year" name="year" value="<%= carData[i].year %>"></input>
                        <br><br>
                        <button class="btn btn-success" type="submit" formaction="/updateVehicle">Update Vehicle</button>
                        <button class="btn btn-warning" type="submit" formaction="/deleteVehicle">Delete Vehicle</button>
                    </form>
                    <br>
        </div>

