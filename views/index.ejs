<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Phonetic Postboard</title>
    <p>Speak in ciphers</p>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/style.css">
</head>
<body class="bg-light">

    <!-- Header -->
    <header class="bg-primary text-white py-3 mb-4 shadow">
        <div class="container">
            <h1 class="text-center">Convert Text to NATO Phonetic </h1>
        </div>
    </header>

    <!-- Converter Form -->
    <section class="container my-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Convert Text</h2>
                <form id="conversionForm" method="POST" action="/saveConverted" class="mt-3">
                    <div class="mb-3">
                        <input type="text" id="textInput" name="textInput" class="form-control" placeholder="Enter text to convert" required>
                    </div>
                    <input type="hidden" id="convertedText" name="convertedText">
                    <div class="mt-3">
                        <button type="button" id="convertBtn" class="btn btn-primary me-2">Convert</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Postboard -->
    <section class="container my-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Phonetic Postboard. Speak In Secure Code!</h2>
                <ul class="list-group mt-3">
                    <% for (var i = 0; i < postData.length; i++) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <form method="POST" action="/update/<%= postData[i]._id %>" class="d-flex flex-grow-1">
                                <input type="text" name="newPost" class="form-control me-2" value="<%= postData[i].post %>" required>
                                <button type="submit" class="btn btn-warning me-2">Update</button>
                            </form>
                            <form method="POST" action="/delete/<%= postData[i]._id %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </section>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js'></script>
    <script src="scripts/script.js"></script>
</body>
</html>
